<!DOCTYPE html>
<html>
  <head>
    <title>TripA</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <script src="https://kit.fontawesome.com/56fe32fe00.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <ul class="navbar-nav ml-auto">
      <% if user_signed_in? %>
        <% if current_user.email != "guest@example.com" %>
        <li class="nav-item">
          <%= link_to 'マイページ', my_page_path, class: 'nav-link text-dark' %>
        </li>
        <li class="nav-item">
        <%= link_to '投稿一覧', posts_path, class: 'nav-link text-dark' %>
        </li>
        <li class="nav-item">
          <%= link_to '新規投稿', new_post_path, class: 'nav-link text-dark' %>
        </li>
        <li class="nav-item">
          <%= link_to 'DM', messages_path(current_user.id), class: 'nav-link text-dark' %>
        </li>
        <li class="nav-item">
        <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: 'nav-link text-dark' %>
        </li>
        <% else %>
        <li class="nav-item">
        <%= link_to '投稿一覧', posts_path, class: 'nav-link text-dark' %>
        </li>
        <li class="nav-item">
        <%= link_to "About", about_path, class: 'nav-link text-dark' %>
        </li>
        <li class="nav-item">
        <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: 'nav-link text-dark' %>
        </li>
        <% end %>
      
      <% elsif admin_signed_in? %>
      <li class="nav-item">
      <%= link_to '投稿一覧', admin_root_path, class: 'nav-link text-dark' %>
      </li>
      <li class="nav-item">
      <%= link_to 'ユーザー一覧', admin_users_path, class: 'nav-link text-dark' %>
      </li>
      <li class="nav-item">
      <%= link_to "About", admin_about_path, class: 'nav-link text-dark' %>
      </li>
      <li class="nav-item">
      <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: 'nav-link text-dark' %>
      </li>


      <% else %>
      <li class="nav-item">
        <%= link_to "About", about_path, class: 'nav-link text-dark' %>
      </li>
      <li class="nav-item">
        <%= link_to "投稿一覧", posts_path, class: 'nav-link text-dark' %>
      </li>
      <li class="nav-item">
        <%= link_to "新規登録", new_user_registration_path, class: 'nav-link text-dark' %>
      </li>
      <li class="nav-item">
        <%= link_to "ログイン", new_user_session_path, class: 'nav-link text-dark' %>
      </li>
      <% end %>
      </ul>

      <div class="row">
        <div class="col-2 offset-8">
          <%= form_with url: root_path do |f| %>
            <%= f.text_field :search, placeholder: "キーワード検索" %>
          <% end %>
        </div>
      </div>
      <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
          <a class="navbar-brand" href="#">Navbar</a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
              <!-- ここサンプル -->
              <% if user_signed_in? %>
                <% if current_user.email != "guest@example.com" %>
                  <li class="nav-item">
                    <%= link_to 'マイページ', my_page_path, class: 'nav-link text-dark' %>
                  </li>
                <% end %>
              <% elsif admin_signed_in? %>

              <% end %>
              <!-- ここまでサンプル -->
              <li class="nav-item">
                <a class="nav-link" href="#">Features</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="#">Pricing</a>
              </li>
              <li class="nav-item">
                <a class="nav-link disabled" href="#">Disabled</a>
              </li>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <main class="container">
      <%= render 'layouts/flash_messages' %>
      <%= yield %>
    </main>
    <footer>
      <p>Oz.inc</p>
    </footer>
  </body>
</html>
