<table class="table mt-4">
  <thead>
    <tr>
      <th>タイトル</th>
      <th>ユーザー名</th>
      <th>説明文</th>
      <th>写真</th>
      <th>いいね</th>
      <th>コメント数</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.user.name %></td>
        <td><%= post.body %></td>
        <td></td>
        <td><%= render "favorites/btn", post: @post %></td>
        <td><%=post.post_comments.count %></td>
        <td><%= link_to "詳細", post_path(post), class: "btn btn-primary" %></td>  
      </tr>
    <% end %>
  </tbody>
</table>