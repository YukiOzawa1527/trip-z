<table class="table">
  <thead>
    <tr>
      <th>タイトル</th>
      <th>ユーザー名</th>
      <th>説明文</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.user.name %></td>
        <td><%= post.body %></td>
        <td><%= link_to "詳細", post_path(post), class: "btn btn-primary" %></td>  
      </tr>
    <% end %>
  </tbody>
</table>