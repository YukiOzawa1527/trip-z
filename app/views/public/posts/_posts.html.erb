<table class="table">
  <thead>
    <tr>
      <th>title</th>
      <th>post_user</th>
      <th>body</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.user.name %></td>
        <td><%= post.body %></td>
        <td><%= link_to "show", post_path(post), class: "btn btn-primary" %></td>  
      </tr>
    <% end %>
  </tbody>
</table>