<h1>新規投稿</h1>
<%= form_with model:@post,local:true do |f| %>
  <%= f.file_field :picture, accept: "image/*", class: "w-100" %>
  <div class="input-group mb-3 mt-4">
            <div class="input-group-prepend">
              <span class="input-group-text" aria-hidden="true"><i class="fas fa-building"></i></span>
  </div>

  <div class="form-group">
    <%= f.label :タイトル %>
    <%= f.text_field :title, class: 'form-control post_title' %>
  </div>

  <div class="form-group">
    <%= f.label :説明文 %>
    <%= f.text_area :body, class: 'form-control post_body', placeholder: "コメントはここ" %>
  </div>

  <%= f.submit "投稿する", class: "btn btn-success btn-sm" %>
<% end %>
