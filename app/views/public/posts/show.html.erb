<div class="container">
  <div class="row mt-4">
    <div class="col-md-3 text-right">
      <h3>投稿詳細</h3>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <table class='table'>
        <tr>
          <th>ユーザー名</th>
          <td>
            <%= link_to(@post.user) do %>
              <%= @post.user.name %>
            <% end %>
          </td>
        </tr>
        <tr>
          <th>タイトル</th>
          <td><%= @post.title %></td>
        </tr>
        <tr>
          <th>説明文</th>
          <td><%= @post.body %></td>
        </tr>
        <tr>
        <th>写真</th>
        <td></td>
      </tr>
        <% if @post.user == current_user %>
          <tr>
            <td colspan=2>
              <%= link_to 'edit', edit_post_path(@post), class: "btn btn-sm btn-success edit_post_#{@post.id}" %>
              <%= link_to 'Destroy', @post, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger destroy_book_#{@post.id}" %>
            </td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
