<h1>投稿詳細</h1>
<table class='table'>
  <tr>
    <th>post_user</th>
    <td>
      <%= link_to(@post.user) do %>
        <%= @post.user.name %>
      <% end %>
    </td>
  </tr>
  <tr>
    <th>title</th>
    <td><%= link_to @post.title, @post %></td>
  </tr>
  <tr>
    <th>body</th>
    <td><%= @post.body %></td>
  </tr>
  <% if @post.user == current_user %>
    <tr>
      <td colspan=2>
        <%= link_to 'edit', edit_post_path(@post), class: "btn btn-sm btn-success edit_post_#{@post.id}" %>
        <%= link_to 'Destroy', @post, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger destroy_book_#{@post.id}" %>
      </td>
    </tr>
  <% end %>
</table>

<%= @post.inspect %>
