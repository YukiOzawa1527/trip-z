<h3>ユーザー登録</h3>


<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>


  <div class="field">
    <%= f.label :ニックネーム（最大20文字） %><br />
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :電話番号（ハイフンなし） %><br />
    <%= f.text_field :phone_number %>
  </div>

  <div class="field">
    <%= f.label :都道府県 %><br />
    <%= f.collection_select :prefecture_id, Prefecture.all, :id, :name, { include_blank: "選択してください" } %>
  </div>

  <div class="field">
    <%= f.label :誕生日 %><br />
    <%= f.text_field :birthday %>
  </div>

  <div class="field">
    <%= f.label :自己紹介（最大200文字） %><br />
    <%= f.text_area :introduction %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %>文字以上)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions mt-3">
    <%= f.submit "Sign up", class: "btn btn-info" %>
  </div>
<% end %>

