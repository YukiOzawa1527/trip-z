<div class="container">
  <div class="row mt-4">
    <div class="col-md-3 text-right">
        <h3>プロフィール編集</h3>
    </div>
  </div>

  <div class="row mt-4">
    <div class="col-md-12 text-left">
      <%= form_with model: @user do |f| %>
        <label for="inputName">姓</label>
        <%= f.text_field :last_name,class: 'form-control', autofocus: true, id:"inputName" %>
    </div>
  </div>
  <div class="row mt-4">
    <div class="col-md-12 text-left">
        <label for="inputName">名</label>
        <%= f.text_field :first_name,class: 'form-control', autofocus: true, id:"inputName" %>
    </div>
  </div>
  <div class="row mt-4">
    <div class="col-md-12 text-left">
        <label for="inputIntroduction">自己紹介</label>
        <%= f.text_area :introduction,class: 'form-control', id:"inputIntroduction" %>
    </div>
  </div>
  <div class="row mt-4">
    <div class="col-md-12 text-left">
      <label for="inputImage">プロフィール写真</label><br>
      <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %> 
    </div>
  </div>
  <div class="row mt-4">
    <div class="col-md-12 text-left">
      <button type="submit" class="btn btn-success">更新する</button>
      <% end %>
    </div>
