<h1>プロフィール編集</h1>

<%= form_with model: @user do |f| %>
    <label for="inputName">姓</label>
    <%= f.text_field :last_name,class: 'form-control', autofocus: true, id:"inputName" %>
    <label for="inputName">名</label>
    <%= f.text_field :first_name,class: 'form-control', autofocus: true, id:"inputName" %>
    <label for="inputImage">Image</label>
    <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %> 
    <label for="inputIntroduction">Introduction</label>
    <%= f.text_area :introduction,class: 'form-control', id:"inputIntroduction" %>

    <button type="submit" class="btn btn-success">Update User</button>
<% end %>