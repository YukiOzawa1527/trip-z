<div class="container">
  <div class="row mt-4">
    <div class="col-md-3">
      <h3>ユーザー詳細</h3>
    </div>
  </div>
  <div class="row mt-4">
    <table class='table'>
      <tr>
        <th>ユーザー名</th>
        <td><%= @user.name %></td>
      </tr>
      <tr>
        <th>自己紹介</th>
        <td><%= @user.introduction %></td>
      </tr>
    </table>
  </div>
  <% if current_user == @user %>
  <div class='row'>
    <div class="col-md-3 pl-0">
      <%= link_to edit_user_path(@user.id), class:"btn btn-outline-secondary btn-block" do %>
        <i class="fas fa-user-cog"></i> 
      <% end %>
    </div>
  </div>
  <% end %>

  <div class="row mt-5">
    <div class="col-md-3">
      <h3>投稿</h3>
    </div>
  </div>

  <div class="row mt-4">
    <table class='table table-hover table-inverse'>
      <thead>
        <tr>
          <th width="15%">タイトル</th>
          <th width="30%">説明文</th>
          <th width="55%">写真</th>
        </tr>
      </thead>
      <tbody>
        <% @posts.each do |post| %>
        <tr>
          <td><%= link_to post.title, post_path(post.id) %></td>
          <td><%= post.body %></td>
          <td>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
