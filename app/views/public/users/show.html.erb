<h1>ユーザー詳細</h1>
<table class='table'>
  <tr>
    <td colspan=2><%= image_tag user.get_profile_image(100,100) %></td>
  </tr>
  <tr>
    <th>name</th>
    <td><%= user.name %></td>
  </tr>
  <tr>
    <th>introduction</th>
    <td><%= user.introduction %></td>
  </tr>
</table>

<div class='row'>
  <%= link_to edit_user_path(user.id), class:"btn btn-outline-secondary btn-block" do %>
    <i class="fas fa-user-cog"></i> 
  <% end %>


  <h1>投稿</h1>
  <table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
    <tr>
      <td><%= image_tag @user.get_profile_image(100,100) %></td>
      <td><%= link_to post.title, post_path(post.id) %></td>
      <td><%= post.body %></td>
    </tr>
    <% end %>
  </tbody>
</table>
