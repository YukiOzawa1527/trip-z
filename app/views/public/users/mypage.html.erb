<div class="container">
  <div class="row mt-5">
    <div class="col-mg-12">
      <h3><%= @user.name %>の投稿</h3>
    </div>
    <%= link_to edit_user_path(@user.id), class:"btn btn-outline-secondary btn-sm d-flex justify-content-center align-items-center" do %>
      <i class="fas fa-user-cog fa-lg"></i>
    <% end %>
  </div>
  <div class="row mt-3">
      <%= render 'public/posts/posts', posts: @posts %>
  </div>
</div>

