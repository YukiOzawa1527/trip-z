<%= form_with url: search_path, method: :get, local: true, class: "form-inline my-2 my-lg-0" do |f| %>
  <%= f.text_field :content, class: "form-control mr-sm-2", placeholder: "Search" %>
  <%= f.select :model, options_for_select({ "User" => "user", "Post" => "post" }),{}, {class:"form-control"} %>
  <%= f.select :method, options_for_select({ "完全一致" => "perfect", "前方一致" => "forward", "後方一致" => "backward", "部分一致" => "partial" }),{}, {class:"form-control"} %>
  <%= f.submit '検索', class: "btn btn-outline-success" %>
<% end %>