<%= form_with url: url, method: :get, local: true, class: "form-inline my-2 my-lg-0" do |f| %>
  <%= f.search_field :content, value: params[:content], class: "form-control form-control-sm mr-sm-2", placeholder: "Search" %>
  <%= f.select :model, options_for_select({ "User" => "user", "Post" => "post", "Tag" => "tag"}, params[:model]), {}, {class:"form-control form-control-sm"} %>
  <%= f.select :method, options_for_select({ "完全一致" => "perfect", "前方一致" => "forward", "後方一致" => "backward", "部分一致" => "partial" }, params[:method] ), {}, {class:"form-control form-control-sm"} %>
  <%= f.submit '検索', class: "btn btn-outline-success" %>
  
<% end %>