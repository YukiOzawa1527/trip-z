<table class="table">
  <thead>
    <tr>
      <th width="10%">タイトル</th>
      <th width="15%">ユーザー名</th>
      <th width="20%">説明文</th>
      <th width="10%">タグ</th>
      <th width="20%">写真</th>
      <th width="15%">レビュー</th>
      <th width="10%"></th>
    </tr>
  </thead>
  <tbody>
    <% posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.user.name %></td>
        <td><%= post.body %></td>
        <td>
          <% post.tags.each do |tag|%>
            <%= link_to tag.name, admin_search_path(content: tag.name,model: "tag",method: "perfect") %> 
          <% end%>
        </td>
        <td>
          <% post.pictures.each do |picture| %>
            <%= image_tag picture.image, size: "70x40" if picture.image.attached? %>
          <% end %>
        </td>
        <td>
          <%= render 'post_reviews/static_rate',post: post %>
        </td>
        <td><%= link_to "詳細", admin_post_path(post), class: "btn btn-primary" %></td> 
      </tr>
    <% end %>
  </tbody>
</table>