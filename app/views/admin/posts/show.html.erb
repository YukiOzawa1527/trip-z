<div class="container">
  <div class="row mt-4">
    <div class="col-md-3 text-right">
      <h3>投稿詳細</h3>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <table class='table'>
        <tr>
          <th>ユーザー名</th>
          <td>
            <%= link_to(admin_user_path(@post.user)) do %>
              <%= @post.user.name %>
            <% end %>
          </td>
        </tr>
        <tr>
          <th>タイトル</th>
          <td><%= @post.title %></td>
        </tr>
        <tr>
          <th>説明文</th>
          <td><%= @post.body %></td>
        </tr>
        <tr>
          <th>写真</th>
          <td></td>
        </tr>
        <tr>
          <td colspan=2>
            <%= link_to '削除', admin_post_path(@post), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger destroy_book_#{@post.id}" %>
          </td>
        </tr>
      </table>
    </div>
  </div>
</div>
